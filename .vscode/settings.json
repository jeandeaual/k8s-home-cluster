{
  "files.associations": {
    "*.json5": "jsonc",
    "**/provision/ansible/**/*.yaml": "ansible",
    "**/provision/ansible/**/*.yml": "ansible",
    "**/provision/ansible/**/*.sops.yaml": "yaml",
    "**/provision/ansible/**/*.sops.yml": "yaml",
    "**/provision/ansible/**/inventory/**/*.yaml": "yaml",
    "**/provision/ansible/**/inventory/**/*.yml": "yaml",
    "*.yaml.j2": "yaml",
    "*.yml.j2": "yaml"
  },
  "yaml.schemas": {
    "Kubernetes": "cluster/*.yaml"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs":"active",
  "editor.hover.delay": 1500
}
